{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2015,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "windows"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "require-jsdoc": "error",
        "arrow-parens": "warn",
        "complexity": ["error", 9],
        "max-depth": ["error", 2],
        "max-nested-callbacks": ["error", 3]
    }
}
